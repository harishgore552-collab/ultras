<!DOCTYPE html>
<html lang="en">

<head>
    <title>Ultras - Clothing Store</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-bg: #b67575;
            --accent-blue: #2563eb;
        }

        /* Animated Gradient Background */
        body {
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* The Glassmorphism Container */
        .auth-container {
            width: 100%;
            max-width: 420px;
            background: rgba(182, 117, 117, 0.85); /* Your color with transparency */
            backdrop-filter: blur(10px);
            padding: 40px;
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            color: white;
            transition: transform 0.3s ease;
        }

        .auth-container:hover {
            transform: scale(1.02);
        }

        /* Form Transition Animation */
        .form-section {
            animation: slideIn 0.6s cubic-bezier(0.23, 1, 0.32, 1) forwards;
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateX(30px); }
            to { opacity: 1; transform: translateX(0); }
        }

        .form-control {
            height: 48px;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            background: rgba(255, 255, 255, 0.9);
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: #fff;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
            transform: translateY(-2px);
        }

        .password-wrapper { position: relative; }

        .password-wrapper i {
            position: absolute;
            right: 15px;
            top: 14px;
            color: #444;
            cursor: pointer;
            font-size: 1.2rem;
            transition: 0.3s;
        }

        .password-wrapper i:hover { color: var(--accent-blue); }

        .btn-custom {
            height: 50px;
            color: white;
            background-color: blue;
            width: 100%;
            border-radius: 12px;
            border: none;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 15px;
            transition: all 0.4s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 255, 0.3);
        }

        .btn-custom:hover {
            background-color: #00008b;
            box-shadow: 0 8px 20px rgba(0, 0, 255, 0.5);
            transform: translateY(-3px);
        }

        .toggle-btn {
            border: none;
            background: transparent;
            color: #fff;
            text-decoration: none;
            margin-top: 25px;
            cursor: pointer;
            font-weight: 500;
            display: inline-block;
            transition: 0.3s;
        }

        .toggle-btn:hover {
            text-decoration: underline;
            letter-spacing: 0.5px;
        }

        h2 { font-weight: 800; margin-bottom: 30px; text-align: center; }
        
        #register-section { display: none; }
    </style>
</head>

<body>

    <div class="auth-container">
        
        <div id="login-section" class="form-section">
            <h2>Welcome Back</h2>
            <form action="/login_user" method="post">
                <label class="mb-1">User Id</label>
                <input class="form-control" type="text" name="user_id" placeholder="Enter your ID" required>

                <label class="mb-1">Password</label>
                <div class="password-wrapper">
                    <input class="form-control" type="password" name="user_password" id="login_pass" placeholder="••••••••" required>
                    <i class="bi bi-eye-slash toggle-password" data-target="login_pass"></i>
                </div>

                <button type="submit" class="btn-custom">Login</button>
            </form>
            <div class="text-center">
                <button class="toggle-btn" onclick="toggleForm('register')">New to Ultras? Join Now</button>
            </div>
        </div>

        <div id="register-section" class="form-section">
            <h2>Create Account</h2>
            <form action="/register" method="post">
                <label class="mb-1">Full Name</label> 
                <input class="form-control" type="text" name="user_name" placeholder="Full Name" required>

                <label class="mb-1">Email</label> 
                <input class="form-control" type="email" name="user_email" placeholder="email@example.com" required>
                
                <label class="mb-1">Mobile</label> 
                <input class="form-control" type="number" name="user_mobile" placeholder="Phone Number" required>
                <label class="mb-1">User Id</label>
                <input class="form-control" type="text" name="user_id" placeholder="user id" required>

                <label class="mb-1">Password</label>
                <div class="password-wrapper">
                    <input class="form-control" type="password" name="user_password" id="reg_pass" placeholder="Create Password" required>
                    <i class="bi bi-eye-slash toggle-password" data-target="reg_pass"></i>
                </div>

                <button type="submit" class="btn-custom">Register</button>
            </form>
            <div class="text-center">
                <button class="toggle-btn" onclick="toggleForm('login')">Already have an account? Login</button>
            </div>
        </div>

    </div>

    <script>
        function toggleForm(type) {
            const login = document.getElementById('login-section');
            const register = document.getElementById('register-section');
            
            // Re-trigger animation by removing and adding class
            const sections = [login, register];
            sections.forEach(s => s.classList.remove('form-section'));
            void login.offsetWidth; // Trigger reflow
            
            if (type === 'register') {
                login.style.display = 'none';
                register.style.display = 'block';
                register.classList.add('form-section');
            } else {
                register.style.display = 'none';
                login.style.display = 'block';
                login.classList.add('form-section');
            }
        }

        // Shared Eye Icon Toggle
        document.querySelectorAll('.toggle-password').forEach(icon => {
            icon.addEventListener('click', function() {
                const targetId = this.getAttribute('data-target');
                const passwordField = document.getElementById(targetId);
                const isPassword = passwordField.getAttribute('type') === 'password';
                
                passwordField.setAttribute('type', isPassword ? 'text' : 'password');
                this.classList.toggle('bi-eye');
                this.classList.toggle('bi-eye-slash');
            });
        });
    </script>

</body>
</html>