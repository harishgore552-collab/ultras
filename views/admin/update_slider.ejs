<%-include("navbar.ejs") %>
<form action="/admin/update_slider" method="post" enctype="multipart/form-data">
        <div class="container p-3 bg-light">
            <h2>Update Slider</h2> <input type="text" style="display: inline;" value="<%= data[0].id %>" readonly name="id" id="">
            <div class="row">
                <div class="mt-3 col-md-4">
                    Enter title
                    <input class="form-control" type="text" value="<%= data[0].slider_title %>"  name="slider_title" id="">
                </div>
                <div class="mt-3 col-md-8">
                    Discription
                    <textarea class="form-control" name="slider_disc" id=""><%= data[0].slider_disc %></textarea>
                </div>
                <div class="mt-3 col-md-4">
                    Button url
                    <input class="form-control" type="text" value="<%= data[0].btn_url %>"  name="btn_url" id="">
                </div>
                <div class="mt-3 col-md-4">
                    Button text
                    <input class="form-control" type="text" value="<%= data[0].btn_text %>"   name="btn_text" id="">
                </div>
                <div class="mt-3 col-md-2">
                    Slider image
                    <input class="form-control" type="file"   name="image" id="">
                </div>
                <div class="col-md-2">
                    privios image
                    <img src="/<%= data[0].image %>" height="60px" alt="">
                </div>
                <div class="mt-4 col-md-12 text-center">
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
<%-include("footer.ejs") %>