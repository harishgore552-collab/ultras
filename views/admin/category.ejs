<%-include("navbar.ejs")%>
    <div class="container bg-white p-2">
        <form action="/admin/save_category" method="post">
            <div class="row">
                <h2>Add Category</h2>
            
                    <div class="col-md-9">
                        Category name 
                        <input class="form-control" type="text" name="category_name" >
                    </div>
                    <div class="col-md-3 mt-4">
                        <button class="btn btn-primary">Add category</button>
                    </div>
                
            </div>
        </form>
    </div>

    
    <!-- category list -->

     <div class="container bg-light mt-4 ">
        <h2>Category List</h2>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped text-center">
                    <tr>
                        <th>Action</th>
                        <th>sr.no</th>
                        <th>Category Name</th>

                    </tr>
                    <% category.map(function(item,i){ %>
                        <tr>
                            <td>
                                <a class="btn btn-danger" style="border-radius: 10px;" href="/admin/delete_category/<%= item.id %>"><i class="fa-solid fa-trash-arrow-up"></i></a>&nbsp;
                                <a class="btn btn-primary" style="border-radius: 10px;" href="/admin/update_category/<%= item.id %>"><i class="fa-solid fa-edit"></i></a>
                            </td>
                            <td><%= i+1  %></td>
                            <td class="text-warning"><%= item.category_name %></td>
                            
                        </tr>
                    <% }) %>
                </table>
            </div>
            
        </div>
        
    </div>
<%-include("footer.ejs")%>