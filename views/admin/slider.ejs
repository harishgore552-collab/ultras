<%-include("navbar.ejs")%>

    <form action="/admin/save_slider" method="post" enctype="multipart/form-data">
        <div class="container p-3 bg-light">
            <h2>Add Slider</h2>
            <div class="row">
                <div class="mt-3 col-md-4">
                    Enter title
                    <input class="form-control" type="text"    name="slider_title" id="">
                </div>
                <div class="mt-3 col-md-8">
                    Discription
                    <textarea class="form-control" name="slider_disc" id=""></textarea>
                </div>
                <div class="mt-3 col-md-4">
                    Button url
                    <input class="form-control" type="text"  name="btn_url" id="">
                </div>
                <div class="mt-3 col-md-4">
                    Button text
                    <input class="form-control" type="text"    name="btn_text" id="">
                </div>
                <div class="mt-3 col-md-4">
                    Slider image
                    <input class="form-control" type="file"   name="image" id="">
                </div>
                <div class="mt-4 col-md-12 text-center">
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
    <!--  slider list -->
    <div class="container mt-5 bg-light table table-striped text-center p-3">
        <h2 class="text-left">slider list</h2>
        
        <div class="row">
            <div class="col-md-2">
                <h2>sr.no</h2>
            </div>
            <div class="col-md-6">
                <h2>slider name</h2>
            </div>
            <div class="col-md-4">
                <h2>Action</h2>
            </div>
        </div>
        <% data.map(function(item,i){ %>

        

        <div class="row ">
            <div class="col-md-2">
                
                <h3><%= i+1 %></h3>
            </div>
            <div class="col-md-6">
                
                <h3 class="text-success"><%= item.slider_title %></h3>
            </div>
            <div class="col-4">
                <a href="delete/<%= item.id %>"><button class="btn btn-danger"><i class="fa-solid fa-trash-arrow-up"></i></button></a>
                <a href="update/<%= item.id %>"><button class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></button></a>
               
                
            </div>
        </div>
        <% }) %>
    </div>
<%-include("footer.ejs")%>

